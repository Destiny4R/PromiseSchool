@page
@model PromiseSchool.Pages.Account.Login3Model
@{
    Layout = null;
}
<!Doctype html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <head><title></title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
    </head>
    <body>
    <section class="vh-100" style="background-color:azure;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <div class="mt-lg-5">
                                    <img src="~/appicons/logo.png" alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center bg-success bg-opacity-25">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form method="post">
                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="h3 fw-bold mb-0">The Promise of God's Int'l Schools</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Students Result Portal</h5>

                                        <div data-mdb-input-init class="form-outline mb-4">
                                            <label class="form-label" for="form2Example18">Student Registration Number</label>
                                            <input type="email" id="form2Example18" class="form-control" />
                                        </div>

                                        <div data-mdb-input-init class="form-outline mb-4">
                                            <label class="form-label" for="form2Example28">Password</label>
                                            <input type="password" id="form2Example28" class="form-control" />
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-primary btn-block form-control" type="submit">Login</button>
                                        </div>
                                    </form>

                                </div>
                            </div>
                            <footer class="footer p-2">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            @(DateTime.Now.Year) &copy; The Promise of God's Int'l Schools - All Right Reserved
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="text-sm-right d-none d-sm-block">
                                                Developed By: <i class="mdi mdi-heart text-danger"></i> The Return Tech - 08039410863
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </footer>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>